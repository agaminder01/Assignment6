<html>
<body>
<main>
<h2>Books Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Author Name</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(book=> { %>
      <tr>
        <!-- <td>
        <%= books.fullName %>
      </td> -->
        <td>
          <a href="<%= `/books/${book._id}` %>">
            <%= book._id %>
          </a>
        </td>
        <td>
          <%= book.Name %>
        </td>
        <td>
          <%= book.AuthorName %>
        </td>
        <td>
          <a href="<%= `books/${book._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>
</html>
</body>
</main>